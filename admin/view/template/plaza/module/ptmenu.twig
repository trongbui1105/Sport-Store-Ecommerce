                                    <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="status" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="status" id="input-status"
                                               data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if status %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="input-menu">{{ entry_choose_menu }}</label>
                                    <div class="col-sm-4">
                                        <select name="menu" id="input-menu" class="form-control">
                                            {% if menus %}
                                                {% for m in menus %}
                                                    <option value="{{ m.id }}" {% if menu == m.id %} selected="selected" {% endif %}>{{ m.name }}</option>
                                                {% endfor %}
                                            {% else %}
                                                <option>{{ text_no_menus }}</option>
                                            {% endif %}
                                        </select>
                                    </div>
                                </div>
