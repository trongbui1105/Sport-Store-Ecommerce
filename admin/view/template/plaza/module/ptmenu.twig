                            <li class="active"><a href="#tab-general" data-toggle="tab">{{ text_general_setting }}</a></li>
                            <li><a href="#tab-menu-bar" data-toggle="tab">{{ text_menu_bar_setting }}</a></li>
                            <li><a href="#tab-top-item" data-toggle="tab">{{ text_top_item_setting }}</a></li>
                            <li><a href="#tab-mega" data-toggle="tab">{{ text_mega_menu_setting }}</a></li>
                            <li><a href="#tab-flyout" data-toggle="tab">{{ text_flyout_menu_setting }}</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-general">
