{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-ptfeaturedcate" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb theme-option-breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="theme-option-container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-ptfeaturedcate" class="form-horizontal">
                        <div class="form-group required">
                            <label class="col-sm-3 control-label" for="input-name">{{ entry_name }}</label>
                            <div class="col-sm-6">
                                <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                                {% if error_name %}
                                    <div class="text-danger">{{ error_name }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-6">
                                <input type="hidden" name="status" value="0" />
                                <input type="checkbox" class="ckb-switch" name="status" id="input-status"
                                        data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                        {% if status %} value="1" checked {% else %} value="0" {% endif %}>
                            </div>
                        </div>

                        <ul class="nav nav-tabs hoz-ul-sections ul-feature-cate">
                            <li class="active"><a href="#tab-slider" data-toggle="tab">{{ tab_slider_settings }}</a></li>
                            <li><a href="#tab-cate" data-toggle="tab">{{ tab_show_cate }}</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab-slider">
                                <div class="form-group required">
                                    <label class="col-sm-3 control-label" for="input-width">{{ entry_width }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
                                        {% if error_width %}
                                            <div class="text-danger">{{ error_width }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-3 control-label" for="input-height">{{ entry_height }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="height" value="{{ height }}" placeholder="{{ entry_height }}" id="input-height" class="form-control" />
                                        {% if error_height %}
                                            <div class="text-danger">{{ error_height }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-limit">{{ entry_limit }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="limit" value="{{ limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-item">{{ entry_item }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="item" value="{{ item }}" placeholder="{{ entry_item }}" id="input-item" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-speed">{{ entry_speed }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="speed" value="{{ speed }}" placeholder="{{ entry_speed }}" id="input-speed" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-autoplay">{{ entry_autoplay }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="autoplay" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="autoplay" id="input-autoplay"
                                                data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if autoplay %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-rows">{{ entry_rows }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="rows" value="{{ rows }}" placeholder="{{ entry_rows }}" id="input-rows" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-shownextback">{{ entry_shownextback }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="shownextback" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="shownextback" id="input-shownextback"
                                                data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if shownextback %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-shownav">{{ entry_shownav }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="shownav" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="shownav" id="input-shownav"
                                                data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if shownav %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="tab-cate">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-slider">{{ entry_slider }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="slider" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="slider" id="input-slider"
                                                data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if slider %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-showdes">{{ entry_showdes }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="showcatedes" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="showcatedes" id="input-showdes"
                                                data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if showcatedes %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-showsub">{{ entry_showsub }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="showsub" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="showsub" id="input-showsub"
                                                data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if showsub %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-sm-3 control-label" for="input-showsubnumber">{{ entry_showsubnumber }}</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="showsubnumber" value="{{ showsubnumber }}" placeholder="{{ entry_showsubnumber }}" id="input-showsubnumber" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label" for="input-image">{{ entry_use_cate_image }}</label>
                                    <div class="col-sm-6">
                                        <input type="hidden" name="use_cate_second_image" value="0" />
                                        <input type="checkbox" class="ckb-switch" name="use_cate_second_image" id="input-image"
                                               data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                                {% if use_cate_second_image %} value="1" checked {% else %} value="0" {% endif %}>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('.toggle.btn').on('click', function () {
            var ckb_status = parseInt($(this).find('.ckb-switch').val());
            if(ckb_status == 1) {
                $(this).find('.ckb-switch').val('0');
            } else {
                $(this).find('.ckb-switch').val('1');
            }
        });
    });
</script>
{{ footer }}