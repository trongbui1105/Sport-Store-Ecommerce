{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="theme-option-container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
                </div>
                <div class="panel-body">
                    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-6">
                                <input type="hidden" name="module_pttweet_status" value="0" />
                                <input type="checkbox" class="ckb-switch" name="module_pttweet_status" id="input-status"
                                       data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                        {% if module_pttweet_status %} value="1" checked {% else %} value="0" {% endif %}>
                            </div>
                        </div>

                        <div class="form-group required">
                            <label class="col-sm-3 control-label" for="input-id">{{ entry_id }}</label>
                            <div class="col-sm-6">
                                <input type="text" name="module_pttweet_id" value="{{ module_pttweet_id }}" placeholder="{{ entry_id }}" id="input-id" class="form-control" />
                                {% if error_id %}
                                    <div class="text-danger">{{ error_id }}</div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-limit">{{ entry_limit }}</label>
                            <div class="col-sm-3">
                                <input type="text" name="module_pttweet_limit" value="{{ module_pttweet_limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-show-time">{{ entry_show_time }}</label>
                            <div class="col-sm-6">
                                <input type="hidden" name="module_pttweet_show_time" value="0" />
                                <input type="checkbox" class="ckb-switch" name="module_pttweet_show_time" id="input-show-time"
                                       data-toggle="toggle" data-on="{{ text_enabled }}" data-off="{{ text_disabled }}" data-width="100" data-height="36"
                                        {% if module_pttweet_show_time %} value="1" checked {% else %} value="0" {% endif %}>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-consumer-key">{{ entry_consumer_key }}</label>
                            <div class="col-sm-6">
                                <input type="text" name="module_pttweet_consumer_key" value="{{ module_pttweet_consumer_key }}" placeholder="{{ entry_consumer_key }}" id="input-consumer-key" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-consumer-secret">{{ entry_consumer_secret }}</label>
                            <div class="col-sm-6">
                                <input type="text" name="module_pttweet_consumer_secret" value="{{ module_pttweet_consumer_secret }}" placeholder="{{ entry_consumer_secret }}" id="input-consumer-secret" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-access-token">{{ entry_access_token }}</label>
                            <div class="col-sm-6">
                                <input type="text" name="module_pttweet_access_token" value="{{ module_pttweet_access_token }}" placeholder="{{ entry_access_token }}" id="input-access-token" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="input-access-token-secret">{{ entry_access_token_secret }}</label>
                            <div class="col-sm-6">
                                <input type="text" name="module_pttweet_access_token_secret" value="{{ module_pttweet_access_token_secret }}" placeholder="{{ entry_access_token_secret }}" id="input-access-token-secret" class="form-control" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('.toggle.btn').on('click', function () {
            var ckb_status = parseInt($(this).find('.ckb-switch').val());
            if(ckb_status == 1) {
                $(this).find('.ckb-switch').val('0');
            } else {
                $(this).find('.ckb-switch').val('1');
            }
        });
    })
</script>
{{ footer }}