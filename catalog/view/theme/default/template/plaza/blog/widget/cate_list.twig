{% if categories %}
    <div class="blog-widget-section categories-widget">
        <div class="title">
            <h4>{{ text_category_title }}</h4>
        </div>
        {% for category in categories %}
        <div class="widget-content">
            <a href="{{ category.href }}">{{ category.name }}</a>
        </div>
        {% endfor %}
    </div>
{% endif %}